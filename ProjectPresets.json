{
   "version": 10,
   "configurePresets": [
      {
         "name": "base",
         "displayName": "Base Config",
         "description": "Most basic configuration setting the project's build directory and warnings",
         "binaryDir": "build/${presetName}",
         "cacheVariables": {
            "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wpedantic",
            "CMAKE_BUILD_TYPE": "Debug"
         }
      }
   ],
   "buildPresets": [
      {
         "name": "base",
         "configurePreset": "base"
      }
   ]
}
